<section class="album py-3 bg-white my-5 px-4 py-4 shadow-sm">
  <div class="container">
    <% if user_signed_in? %>
      <%= link_to 'New Article', new_article_path, class: 'btn btn-primary btn-sm' %>
    <% end %>
    <h1 class="h3 my-4"><strong class="text-dark">Semua artikel</strong></h1>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-bordered nowrap" id="example" style="width:100%">
          <thead>
            <tr>
              <th scope="col">No.</th>
              <th scope="col">Title</th>
              <th scope="col">Author</th>
              <th scope="col">Catgory</th>
              <th scope="col">Publish</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% no = 0 %>
            <% @articles.each do |a| %>
              <tr>
                <td><%= no = no+1 %></td>
                <th scope="row"><%= a.title %></th>
                <td><%= a.user.name  %></td>
                <td><%= a.category.name  %></td>
                <td><%= a.publish.titleize  %></td>
                <td>
                  <%= link_to article_path(a), class: 'btn btn-primary btn-sm text-white', target: '_blank' do %>
                    <i class="fas fa-search" data-toggle='tooltip' data-placement='top' title='Lihat'></i>
                  <% end %>

                  <%= link_to edit_article_path(a), class: 'btn btn-warning btn-sm text-white' do %>
                    <i class="fas fa-edit" data-toggle='tooltip' data-placement='top' title='Edit'></i>
                  <% end %>

                  <%= link_to article_path(a), method: :delete, class: 'btn btn-danger btn-sm text-white', data: {confirm: 'Apakah anda yakin akan menghapus artikel ini?'} do %>
                    <i class="fas fa-trash" data-toggle='tooltip' data-placement='top' title='Hapus'></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

