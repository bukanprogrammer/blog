<section class="album py-3 bg-white my-5 px-4 py-4 shadow-sm">
  <div class="container">
    <h1 class="h3 my-4"><strong><i class="blockquote-footer">Semua Kategori</i></strong></h1>
    <div class="row">
      <% @categories.each do |c| %>
        <div class="col-md-3">
          <div class="card mb-4 shadow-sm px-3 py-3">
            <%= image_tag('icon-rails.png', class: 'bd-placeholder-img card-img-top') %>
            <h1 class="h4 text-center mt-3"><%= c.name %></h1>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
