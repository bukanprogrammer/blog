<section class="my-4">
  <div class="container">
    <h1 class="h2 mb-4 font-weight-bold"><strong>Artikel</strong></h1>
    <div class="row">
      <% @articles.each do |a| %>
        <div class="card mb-3" style="max-width: 800px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <%= image_tag("#{a.image_feature}", class: 'card-img') %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= a.title.titleize %></h5>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</section>
