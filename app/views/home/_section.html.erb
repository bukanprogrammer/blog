<!-- section for home -->
<section>
  <div class="container-fluid text-center">
    <div class="row">
      <div class="col-md-12 text-light">
        <h1 class="display-6">Bukan Programmer</h1>
        <p class="lead">Belajar pemrograman untuk investasi masa depan.</p>
        <p>Punya tulisan tentang teknologi?</p>
        <a class="btn btn-outline-light btn-lg text-light" href="#" role="button">Ayo berbagi!</a>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container p-5">
    <div class="row">
      <h1 class="h3 mb-5">Teknologi apa yang akan dipelajari?</h1>
      <div class="card-columns">
        <% @hash.each do |key, value| %>
          <div class="card text-center p-3">
            <div class="col-md-12 col-xs-4">
              <%= image_tag("#{value[:icon]}")%>
              <div class="card-body">
                <h5 class="card-title font-weight-bold"><%= value[:title] %></h5>
                <p class="card-text text-justify"><%= value[:description] %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="jumbotron-fluid">
    <div class="container">    
      <div class="row">
        <div class="col-md-12 mt-3 text-light">
          <h1 class="h3">Surat Kabar</h1>
          <p class="mt-4">
            Subscribe agar mendapatkan berita terbaru dari kami.
          </p>
          <form class="form-inline">
            <div class="input-group mb-2 mr-2">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-envelope"></i></span>
              </div>
              <input type="email" class="form-control" placeholder="Email">
            </div>
            <button type="submit" class="btn btn-danger mb-2">Subscribe</button>
          </form>
          <p class="mt-4">
            Atau follow kami melalui:
          </p>
          <form class="form-inline">
            <a class="text-danger h2" href=""><i class="fab fa-youtube"></i></a>
            <a class="text-dark h2 ml-2" href=""><i class="fab fa-github"></i></a>
            <a class="text-primary h2 ml-2" href=""><i class="fab fa-facebook"></i></a>
            <a class="text-info h2 ml-2" href=""><i class="fab fa-twitter"></i></a>
            <a class="text-warning h2 ml-2" href=""><i class="fab fa-instagram"></i></a>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
