<section class="album py-3 bg-white shadow-sm py-4" id="category">
  <div class="container">
    <h1 class="h3 my-4"><strong><i class="blockquote-footer">Belajar apa saja?</i></strong></h1>
    <div class="row">
      <% @categories.each do |c| %>
        <div class="col-md-3">
          <%= link_to category_path(c), class: 'text-decoration-none text-secondary' do %>
            <div class="card mb-4 shadow-sm px-3 py-3">
              <%= image_tag("#{c.image_feature}", class: 'bd-placeholder-img card-img-top') %>
              <h1 class="h4 text-center mt-3"><%= c.name %></h1>
              <small class="font-weight-bold text-center">(<%= c.articles.count %> Tulisan)</small>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= link_to 'Selengkapnya...', categories_path, class: 'btn btn-dark btn-sm' %>
  </div>
</section>
